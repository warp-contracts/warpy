{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/@types", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
